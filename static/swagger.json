{
    "swagger": "2.0",
    "info": {
      "title": "File Processing and Workflow API",
      "description": "API for processing files, executing workflows, and listing schemas.",
      "version": "1.0.0"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/process_file": {
        "post": {
          "summary": "Process a file",
          "description": "Upload a CSV/TXT file and apply a selected schema to it.",
          "consumes": ["multipart/form-data"],
          "parameters": [
            {
              "name": "file",
              "in": "formData",
              "type": "file",
              "description": "The file to be processed.",
              "required": true
            },
            {
              "name": "schema",
              "in": "formData",
              "type": "string",
              "description": "The schema to apply to the file.",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "File processed successfully"
            }
          }
        }
      },
      "/run_workflow": {
        "post": {
          "summary": "Run a workflow",
          "description": "Execute a workflow on uploaded YAML data.",
          "consumes": ["multipart/form-data"],
          "parameters": [
            {
              "name": "data",
              "in": "formData",
              "type": "file",
              "description": "The YAML data file to run the workflow on.",
              "required": true
            },
            {
              "name": "workflow",
              "in": "formData",
              "type": "string",
              "description": "The name of the workflow to execute.",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Workflow executed successfully"
            }
          }
        }
      },
      "/list_schemas": {
        "get": {
          "summary": "List all schemas",
          "description": "Retrieve a list of all available schemas.",
          "responses": {
            "200": {
              "description": "Schemas listed successfully"
            }
          }
        }
      }
    }
  }
  